<h1>BURGER TIME</h1>

<h2>WHO LIKES BURGERS</h2>

<ul>
    {{#each burgers}}
    {{#unless eaten}}
    {{> burgers/burger-block sleep=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Eaten Burgers</h2>

<ul>
    {{#each burgers}}
    {{#if eaten}}
    {{> burgers/burger-block sleep=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger NAME:</label>
        <input type="text" id="ca" name="name">
    </div>

